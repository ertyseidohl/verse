{
  "name": "verse",
  "description": "A language server for verse (poetry)",
  "author": "Erty Seidohl",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/ertyseidohl/verse"
  },
  "publisher": "ertyseidohl",
  "categories": [],
  "keywords": [
    "multi-root ready",
    "poet",
    "poem",
    "poetry",
    "verse"
  ],
  "engines": {
    "vscode": "^1.52.0"
  },
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "verse",
        "aliases": [
          "verse",
          "Verse"
        ],
        "extensions": [
          ".verse",
          ".poem"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "verse",
        "scopeName": "source.verse",
        "path": "./syntaxes/verse.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "verse.installRhymingDictionary",
        "title": "Verse: Install Rhyming Dictionary"
      }
    ],
    "activationEvents": [
      "onCommand:verse.installRhymingDictionary"
    ],
    "configuration": {
      "type": "object",
      "title": "Multi LSP configuration",
      "properties": {
        "verseLanguageServer.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Controls the enablement."
        },
        "verseLanguageServer.options": {
          "scope": "resource",
          "type": "object",
          "default": {},
          "description": "Additional options."
        },
        "verseLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "watch:tsc": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
